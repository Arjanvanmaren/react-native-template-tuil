{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "types": ["react", "react-native", "jest", "styled-components", "react-test-renderer"],
    "baseUrl": "./",
    "paths": {
      "@domains/*": ["src/domains/*"],
      "@app/*": ["src/app/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
}
