# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
# C-style doc comments
block_comment_start = /*
block_comment = *
block_comment_end = */

indent_style = space
indent_size = 2

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js.snap]
indent_size = 1

[*.gradle]
indent_size = 4