{
  "preset": "react-native",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "modulePaths": ["<rootDir>"],
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/app/$1",
    "^@domains/(.*)$": "<rootDir>/src/domains/$1"
  }
}
